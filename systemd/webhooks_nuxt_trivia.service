[Unit]
Description=Node server that receives github webhooks for trivia app
Requires=network-online.target nginx.service
After=syslog.target network-online.target
[Service]
WorkingDirectory=/opt/webhooks_nuxt_trivia
# not using nvm on this server
ExecStart=/usr/bin/npm run start
Restart=always
# Restart service after 10 seconds if node service crashes 
RestartSec=10
# Output to syslog
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=webhooks-nuxt-trivia
User=ubuntu
Group=ubuntu

